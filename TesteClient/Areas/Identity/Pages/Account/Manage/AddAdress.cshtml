@page
@model AddAdressModel
@{
    ViewData["Title"] = "Adresses";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Adresse.Num" class="form-control" />
                <label asp-for="Input.Adresse.Num" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Adresse.Road" class="form-control" />
                <label asp-for="Input.Adresse.Road" class="form-label"></label>
                <span asp-validation-for="Input.Adresse.Road" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Adresse.Complement" class="form-control" />
                <label asp-for="Input.Adresse.Complement" class="form-label"></label>
                <span asp-validation-for="Input.Adresse.Complement" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Adresse.ZipCode" class="form-control" />
                <label asp-for="Input.Adresse.ZipCode" class="form-label"></label>
                <span asp-validation-for="Input.Adresse.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Adresse.City" class="form-control" />
                <label asp-for="Input.Adresse.City" class="form-label"></label>
                <span asp-validation-for="Input.Adresse.City" class="text-danger"></span>
            </div>
            <p></p>
            <button id="create-profile-button" type="submit" class="w-100 btn btn-lg btn-secondary ">Confirmer</button>
        </form>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}