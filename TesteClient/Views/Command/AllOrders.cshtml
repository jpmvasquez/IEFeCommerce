@using TesteClient.Models.Commands
@model IEnumerable<Order>
@{
    ViewData["Title"] = "Toutes les commandes";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>List de vos commandes</h4>
        </p>
        <form asp-controller="Command" asp-action="UpdateOrders" enctype="multipart/form-data">
        <table class="table">
            <thead>
                <tr>
                    <th>Référence</th>
                    <th>Date d'achat</th>
                    <th>Produit(s)</th>
                    <th>Total</th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("SUPERADMIN"))
                    {
                        <th>Utilisateur</th>
                    }
                    <th>Adresse</th>
                    <th>Statut</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td class="align-middle">@order.reference</td>
                        <td class="align-middle">@order.orderDate</td>
                        <td class="align-middle">
                            <ul style="list-style-type:none">
                                @foreach (var item in order.orderItems)
                                {
                                    <li>
                                        <div class="alert alert-info" role="alert">
                                            <span class="badge bg-success">@item.qty</span> @item.price.ToString("c") - @item.product.name
                                        </div>
                                    </li>
                                }
                            </ul>
                        </td>
                        <td class="align-middle">
                            @order.orderItems.Select(oi => decimal.Parse(oi.product.price) * oi.qty).Sum().ToString("c")
                        </td>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("SUPERADMIN"))
                        {
                            <td class="align-middle"> @order.user.FullName </td>
                        }
                        <td class="align-middle">@order.address.FullAddress</td>
                            <td class="align-middle">
                            <select asp-for="@order.orderStatus" asp-items="@Html.GetEnumSelectList<Order.eOrderStatus>()" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
            <button type="submit" class="btn btn-outline-primary" asp-controller="Command" asp-action="UpdateOrders">
                Enregistrer la commande
            </button>
        </form>
    </div>
</div>