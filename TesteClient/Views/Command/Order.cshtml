@using TesteClient.Models.Commands;
@model IEnumerable<OrderDetails>;

@{
    ViewData["Title"] = "Résumé de vos commandes";
    decimal totalOrders = 0;
    @foreach (var item in Model)
    {
        totalOrders += item.price;
    }
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h2>Résumé de vos commandes</h2>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Quantité</th>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Sous Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.qty</td>
                        <td class="align-middle">@item.product.name</td>
                        <td class="align-middle">@item.product.price.ToString() + euros</td>
                        <td class="align-middle">@item.price.ToString("c")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                    <td><b>Total:</b></td>
                    <td>
                        @totalOrders.ToString("c")
                    </td>
                    <td></td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <div class="btn-group">
                <form asp-controller="Command" asp-action="ShoppingBasket" enctype="multipart/form-data">
                <button type="submit" class="btn btn-outline-primary" asp-controller="Command" asp-action="CompleteOrder">
                    Enregistrer la commande
                </button>
                </form>
            </div>
        </div>

    </div>
</div>